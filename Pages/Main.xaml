<Page x:Class="Airlines_Чернышков.Pages.Main"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Airlines_Чернышков.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800 "
      Title="Main">

    <Grid Background="#0c73fe">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Image Source="/Images/airplane.png"
                  Grid.Row="0"
                Width="32"
                Height="32"
                Margin="10,0,758,0"/>
        <TextBlock
                   Text="Управление авиалиниями" 
                   Foreground="White" 
                   FontSize="20"
                   FontWeight="Medium"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Center"
                   Margin="60,0,0,0"/>


        <Border Grid.Row="1"
                
                CornerRadius="10"
                Width="500"
                Height="350"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">

            <StackPanel VerticalAlignment="Center" 
                        HorizontalAlignment="Center"
                        Width="400"
                        >

                <TextBlock Text="Поиск дешёвых авиабилетов" 
                           FontSize="20"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,10"
                           Foreground="White"/>

                <TextBlock Text="Лучший способ купить авиабилеты дёшево" 
                           HorizontalAlignment="Center"
                           Margin="0,0,0,30"
                           Foreground="White"/>


                <TextBlock Text="Откуда:" 
                           Margin="0,0,0,5"
                           Foreground="White"/>
                <TextBox x:Name="FromTextBox" 
                         Height="35"
                         FontSize="14"
                         Margin="0,0,0,20"/>


                <TextBlock Text="Куда:" 
                           Margin="0,0,0,5"
                           Foreground="White"/>
                <TextBox x:Name="ToTextBox" 
                         Height="35"
                         FontSize="14"
                         Margin="0,0,0,30"/>
                <Button x:Name="SearchButton" 
                        Content="Найти" 
                        Width="150"
                        Height="30"
                        Background="#ff4000"
                        Foreground="White"
                        FontSize="16"
                        FontWeight="Bold"
                        BorderThickness="0"
                        Margin="250,0,0,0"
                        Click="SearchButton_Click"/>



            </StackPanel>
        </Border>
    </Grid>
</Page>
